<button class="btn btn-large btn-primary new" {{action 'goToNewDive'}}>New dive</button>
<table class="table table-striped">
  <tbody>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Created</th>
      <th>Created</th>
      <th>Actions</th>
    </tr>
    {{#each}}
      <tr>
        <td>{{#link-to 'dive' this}}<img class="thumbnail" {{bind-attr src=thumbnail}} />{{/link-to}}</td>
        <td>{{#link-to 'dive' this}}{{max_depth}}{{/link-to}}</td>
        <td>{{#link-to 'dive' this}}{{creation_date}}{{/link-to}}</td>
        <td>{{#link-to 'dive' this}}{{avg_depth}}{{/link-to}}</td>
        <td>
          <span class="edit glyphicon glyphicon-edit" {{action 'edit' this}}></span>
          <span class="remove glyphicon glyphicon-remove-circle" {{action 'delete' this}}></span>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>